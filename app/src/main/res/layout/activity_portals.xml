<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.edusense.Portals">

    <Button
        android:id="@+id/student_portal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="Student" />

    <Button
        android:id="@+id/teacher_portal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Teacher"
        android:layout_below="@+id/student_portal"
        android:layout_alignStart="@+id/parent_portal" />

    <Button
        android:id="@+id/parent_portal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_portal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="Parent" />

</RelativeLayout>
