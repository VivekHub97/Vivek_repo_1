<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.edusense.StudentInfo">

    <EditText
        android:id="@+id/admField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Enter Admission Number"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nameField" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/admField"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/dobField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Date Of Birth"
        android:inputType="date"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/nameField"
        android:layout_alignStart="@+id/nameField" />

    <EditText
        android:id="@+id/phoneField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dobField"
        android:layout_below="@+id/dobField"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/codeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:onClick="requestCode"
        android:text="send code" />

    <EditText
        android:id="@+id/codeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phoneField"
        android:layout_below="@+id/codeBtn"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enter Request Code"
        android:inputType="number" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/codeBtn"
        android:layout_below="@+id/codeField"
        android:layout_marginTop="24dp"
        android:onClick="signIn"
        android:text="sign in" />

</RelativeLayout>
